<!doctype html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../assets/css/pico.min.css">
    <link rel="stylesheet" href="../assets/css/custom.css">
    <link rel="stylesheet" href="../assets/css/dashboard.css">
    <link rel="stylesheet" href="../assets/css/bootstrap-icons.css">
    <title>Koolo Dashboard</title>
</head>
<body>
<main class="container">
    <div id="loading" class="loading"></div>
    <div id="dashboard" style="display: none;">
        <div class="dashboard-header">
            <div class="dashboard-title-container">
                <h1 class="dashboard-title">Koolo</h1>
                <span id="version" class="version-badge"></span>
            </div>
            <div class="dashboard-controls">
                <button class="btn btn-outline" onclick="location.href='/config'" title="Settings">
                    <i class="bi bi-gear"></i>
                </button>
                <button id="reloadConfigBtn" class="btn btn-outline" onclick="reloadConfig()" title="Reload Configs">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <button class="btn btn-outline" onclick="location.href='/all-drops'" title="All Drops">
                    <i class="bi bi-gem"></i>
                </button>
                <button class="btn btn-outline" onclick="openPickitEditor()" title="Pickit Editor">
                    <i class="bi bi-list-check"></i>
                </button>
                <button class="btn btn-outline" onclick="openDropManager()" title="Drop Manager">
                   <i class="bi bi-arrow-down-square"></i>
                </button>
                <button class="btn btn-outline" onclick="triggerAutoStartOnce()" title="Auto Start Once">
                    <i class="bi bi-play-circle"></i>
                </button>
                <button class="btn btn-start" onclick="location.href='/supervisorSettings'" title="Add Character">
                    <i class="bi bi-plus"></i>
                </button>
                <button class="btn btn-outline attach-btn" onclick="showAttachPopup('${key}')" style="display:none;">
                    <i class="bi bi-link-45deg btn-icon"></i>Attach
                </button>
            </div>
        </div>
        <!-- Logs Panel -->
        <div id="logs-panel" class="logs-panel">
            <div class="logs-header" onclick="toggleLogsPanel()">
                <div class="logs-header-left">
                    <i class="bi bi-journal-text"></i>
                    <span>Live Logs</span>
                    <span class="log-count" id="log-count">0</span>
                </div>
                <button class="toggle-logs-btn">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </div>
            <div class="logs-content" style="display: none;">
                <div class="logs-tabs" id="logs-tabs">
                    <button class="log-tab active" data-source="koolo">Koolo</button>
                </div>
                <div class="logs-controls">
                    <input type="text" class="log-search" id="log-search" placeholder="Filter logs..." oninput="filterLogs()">
                    <button class="btn btn-outline btn-sm" onclick="clearLogs()" title="Clear Logs">
                        <i class="bi bi-trash"></i>
                    </button>
                    <div class="log-filters">
                        <label><input type="checkbox" value="INFO" checked onclick="updateLogFilters()"> Info</label>
                        <label><input type="checkbox" value="WARN" checked onclick="updateLogFilters()"> Warn</label>
                        <label><input type="checkbox" value="ERROR" checked onclick="updateLogFilters()"> Error</label>
                        <label><input type="checkbox" value="DEBUG" checked onclick="updateLogFilters()"> Debug</label>
                    </div>
                    <label class="autoscroll-toggle">
                        <input type="checkbox" id="logs-autoscroll" checked>
                        <span>Auto-scroll</span>
                    </label>
                </div>
                <div class="logs-output" id="logs-output"></div>
            </div>
        </div>
        <div id="characters-container"></div>
    </div>
</main>
<script src="../assets/js/dashboard.js"></script>
<script src="../assets/js/logs.js"></script>
</body>
</html>